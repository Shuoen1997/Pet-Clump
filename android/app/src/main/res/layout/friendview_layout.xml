<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clickable="true"
    android:id="@+id/friendview_cardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="10dp"
    android:background="@drawable/chat_bubble_purple"
    app:cardCornerRadius="8dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/friendview_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_marginEnd="7dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="7dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:src="@drawable/dog_placeholder"
            app:layout_constraintEnd_toStartOf="@+id/friendview_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/friendview_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="112dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="112dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:maxLength="20"
            android:text="Guauauauua"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/friendview_history"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/friendview_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/friendview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="28dp"
            android:text="12:01"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friendview_image" />

        <TextView
            android:id="@+id/friendview_history"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="84dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="84dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:maxLength="36"
            android:text="Heyy, what's up? I think this is a perfect time for us to hang out w "
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/friendview_image"
            app:layout_constraintTop_toBottomOf="@+id/friendview_name" />

    </android.support.constraint.ConstraintLayout>













</android.support.v7.widget.CardView>