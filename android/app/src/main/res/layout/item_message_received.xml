<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/chatview_receive_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:src="@drawable/pig_placeholder"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/chatview_receive_name"
        android:text="Sueanne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/chatview_receive_image"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/chatview_receive_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_bubble_white"
        android:maxWidth="240dp"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:text="hi man, how are you?"
        android:textSize="18sp"
        android:textColor="@color/navy"
        app:layout_constraintLeft_toRightOf="@+id/chatview_receive_image"
        app:layout_constraintTop_toBottomOf="@+id/chatview_receive_name" />

    <TextView
        android:id="@+id/chatview_receive_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/chatview_receive_message"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/chatview_receive_message" />

</android.support.constraint.ConstraintLayout>