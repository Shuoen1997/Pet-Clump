<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/chatview_sent_message"
        android:text="hello, hello!dfdfdfdfddfdfdfdfdfdfdfdfddfdf"
        android:background="@drawable/chat_bubble_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="15dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginRight="8dp"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chatview_sent_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/chatview_sent_message"
        app:layout_constraintRight_toLeftOf="@+id/chatview_sent_message" />

</android.support.constraint.ConstraintLayout>